GET     /get-started/create-application     @controllers.ScapigController.getStartedCreateApplication()
GET     /get-started/authorization          @controllers.ScapigController.getStartedAuthorization()

GET     /architecture/components            @controllers.ScapigController.architectureComponents()
GET     /architecture/diagram               @controllers.ScapigController.architectureDiagram()

GET     /api-publisher/howto                @controllers.ScapigController.apiPublisherHowTo()
GET     /api-publisher/raml                 @controllers.ScapigController.apiPublisherRaml()
GET     /api-publisher/api-lifecycle        @controllers.ScapigController.apiPublisherLifecycle()

GET     /developer-hub/api-documentation    @controllers.ScapigController.developerHubApiDocumentation()
GET     /developer-hub/application          @controllers.ScapigController.developerHubApplication()

GET     /api-gateway/routing                @controllers.ScapigController.apiGatewayRouting()
GET     /api-gateway/authorization          @controllers.ScapigController.apiGatewayAuthorization()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.versioned(file)
->          /webjars                         webjars.Routes
